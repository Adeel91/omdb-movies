{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2019,
    "sourceType": "module",
    "allowImportExportEverywhere": true
  },
  "globals": {
    "cy": true
  },
  "rules": {
    "semi": "error"
  },
  "env": {
    "es6": true
  },
  "extends": ["prettier"],
  "ignorePatterns": [
    "*.png",
    "*.jpg",
    "*.svg",
    "*.css",
    "*.scss",
    "*.md",
    "*.json",
    "*.lock",
    "*.yaml"
  ]
}
